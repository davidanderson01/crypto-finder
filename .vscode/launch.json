// This is a launch configuration file for Visual Studio Code.
// It contains various configurations for debugging different types of applications within the workspace.

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "/usr/bin/ssh", // Replace with the actual path to your SSH program
                "pipeArgs": [],
                "debuggerPath": "~/vsdbg/vsdbg" // Replace with the actual path to your debugger
            }
        },
        {
            "name": "Remote Debug IoT Edge Module (.NET Core)",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "sourceFileMap": {
                "/app": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch IoT Edge Module (.NET Core)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.1/YourApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole",
            "env": {
                "EdgeHubConnectionString": "${config:azure-iot-edge.EdgeHubConnectionString}",
                "EdgeModuleCACertificateFile": "${config:azure-iot-edge.EdgeModuleCACertificateFile}"
            }
        },
        {
            "name": "Launch Node.js Application",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/app.js",
            "console": "integratedTerminal"
        },
        {
            "name": "Run npm start",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Mocha Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Yeoman Generator",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/yo/lib/cli.js",
            "args": [
                "generator"
            ],
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Launch Webpack Dev Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
            "args": ["--config", "${workspaceFolder}/webpack.config.js"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Attach to Node.js",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "protocol": "inspector",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Launch Node.js Application",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.js",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}


